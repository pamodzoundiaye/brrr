

<div class="container">
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Connectez vous et profitez pleinement</h1>
            <div class="account-wall">
                <%= image_tag 'avatar.png', class:'profile-img' %>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:'form-signin') do |f| %>
                  <%= f.input :email, required: false, autofocus: true, placeholder:'email', label:false, class:'form-control' %>
                  <%= f.input :password, required: true, placeholder:'mot de passe', label:false, class:'form-control' %>
                  <%= f.button :submit, "Connexion" , class:"btn btn-lg btn-primary btn-block" %>
                  
                  <label class="checkbox pull-left">
                      <%= f.input :remember_me, :label => "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
                  </label>
                <% end %>
                <hr>  
                <%- if devise_mapping.omniauthable? %>
                  <%- resource_class.omniauth_providers.each do |provider| %>
                    <%= link_to "<span class='fa fa-facebook'></span>".html_safe+"  Connectez vous avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn btn-social btn-facebook"%>
                      
                  <% end -%>
                <% end -%>
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Creez un compte ", new_registration_path(resource_name), class:"btn btn-block" %><br />
                <% end -%>
            </div>
        </div>
    </div>
     
</div>
</div>