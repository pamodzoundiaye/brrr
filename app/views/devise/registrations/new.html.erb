<


<div class="container">
			<div class="row main" style=" align:center;">
				<div class="panel-heading">
	               <div class="panel-title text-center">
	               		<h1 class="title">Créez un compte</h1>
	               		<hr />
	               	</div>
	            </div> 
				<div class="main-login main-center">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class:'form-horizontal') do |f| %>
						
						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                  <%= f.input :name, required: true, class:'form-control', placeholder:'Saisissez votre nom', label:false %>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
									<%= f.input :email, required: true, autofocus: true, class:'form-control', placeholder:'votre email', label:false %>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
									<%= f.input :password, required: true, placeholder:'mot de passe', label:false, class:'form-control' %>     
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
									<%= f.input :password_confirmation, required: true, placeholder:'confirmez votre mot de passe', label:false, class:'form-control' %>
								</div>
							</div>
						</div>
            <div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<%= f.file_field :profile, class:'form-control', label:'choisissez une photo de profil' %>
								</div>
							</div>
						</div>
            <div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                  <%= f.input :courtier,  class:'form-control', label:'Etes vous courtier?' %>
								</div>
							</div>
						</div>

						<div class="form-group ">
              <%= f.button :submit, "Créez votre compte", class:'btn btn-primary btn-lg btn-block login-button' %>
						</div>
						<div class="login-register">
				            <%- if devise_mapping.omniauthable? %>
                  <%- resource_class.omniauth_providers.each do |provider| %>
                    <%= link_to "<span class='fa fa-facebook'></span>".html_safe+"  Connectez vous avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn btn-social btn-facebook"%>
                      
                  <% end -%>
                <% end -%>
				         </div>
					<% end %>
				</div>
			</div>
		</div>