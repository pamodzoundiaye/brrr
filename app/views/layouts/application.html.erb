<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SenVilla</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <script> 
      var width = window.innerWidth
      || document.documentElement.clientWidth
      || document.body.clientWidth;
      windowWidth = width;
    </script>
  </head>

  <body>
    
  
     <!-- navbar-->
      <header class="header">
        <div role="navigation" class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header"><%= link_to 'SenVilla', root_path, class:'navbar-brand' %>
              <div class="navbar-buttons">
                <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle navbar-btn">Menu<i class="fa fa-align-justify"></i></button>
              </div>
            </div>
            <div id="navigation" class="collapse navbar-collapse navbar-right">
              <ul class="nav navbar-nav">
                <li class="inactive"><%= link_to 'Vente', ventes_path %></li>
                <li><%= link_to 'Location', rents_path %></li>
                <li><%= link_to 'Maison d\'Hôtes', shared_path %></li>
                <li><%= link_to 'Auberges', auberge_path %></li>
                <li><%= link_to 'Demandes', demandes_path %></li>
                <li><%= link_to 'Guide', guide_path %></li>
                <% if current_user!=nil %>
                  <li><%= link_to 'Profil', edit_user_registration_path %></li>
                  </ul><%= link_to 'Deconnexion', destroy_user_session_path, :method => :delete, class:'btn navbar-btn btn-ghost' %>
                <% else %>
                  </ul><%= link_to 'Connexion', new_user_session_path, class:'btn navbar-btn btn-ghost' %>
                  </i><%= link_to "<span class=\"glyphicon glyphicon-plus-sign\"></span>Compte".html_safe, new_user_registration_path , class:'btn icon_plus' %>
                <% end %>
              
            </div>
          </div>
        </div>
      </header>
      <% unless controller_name=="sessions" || controller_name=="registrations" %>
            <!-- The menu carousel -->
    
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">
                  <%= image_tag 'jumbotron5.jpg' %>
                </div>

                <div class="item">
                  <%= image_tag 'jumbotron6.jpg' %>
                </div>

                <div class="item">
                  <%= image_tag 'jumbotron7.jpg' %>
                </div>
              </div>

              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
              <div class="carrcont">
                <h1 style="font-weight: 1400;color:#FFFFFF;font-size:70px">SenVilla</h1>
                <p class="margin-bottom" style="font-weight: 1400;color:#FFFFFF;font-size:20px">Trouvez le logement de vos rêves au Sénégal</p>
                <p><%= link_to 'Courtiers', courtiers_path, class:'btn btn-white', style: 'color:#FFFFFF; background:#222222;' %>
                  <%= link_to 'Publier Logement', new_place_path, class:'btn btn-white', style: 'color:#FFFFFF; background:#222222;' %>
                  <% if current_user!=nil %>
                  <%= link_to 'Mes logements', pubs_path, class:'btn btn-white', style: 'color:#FFFFFF; background:#222222' %>
                  <% end %>
                  <% if current_user!=nil  and current_user.has_role? :admin %>
                  <%= link_to 'Administration', admin_path, class:'btn btn-white', style: 'color:#FFFFFF; background:#111144; opacity:50%' %>
                  <% end %>
                  </p>
              </div>
            </div>



<%end%>

    <%= yield %>
<% unless controller_name=="sessions" || controller_name=="registrations" %>
